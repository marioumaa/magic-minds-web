                              </div>
                              <hr>

                              <div class="row">
                                  <div class="col-sm-3">
                                      <h6 class="mb-0">Gender</h6>
                                  </div>
                                  <div class="col-sm-9 text-secondary">
                                      {{ user.gender}}
                                  </div>
                              </div>
                              <hr>
                              <div class="row">
                                  <div class="col-sm-12">
                                      <a class="btn btn-info " target="__blank" href="{{ path('user.add',{'id': user.id}) }}">Edit</a>
                                  </div>
                              </div>
                          </div>
                      </div>




                  </div>
              </div>

          </div>


