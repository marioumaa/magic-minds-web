{% extends 'base1.html.twig' %}
{% block navimg %}
{% endblock %}
{% block body %}
<div class="container">
    <h1>Edit Quiz</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
            {{form_errors(form)}}
             
            <div class="form-group mb-3">
                {{ form_label(form.titre, 'Title') }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                {{form_errors(form.titre)}}
               
            </div>
            <div class="form-group mb-3">
                {{ form_label(form.temp, 'Time') }}
                {{ form_widget(form.temp, {'attr': {'class': 'form-control'}}) }}
                {{form_errors(form.temp)}}
               
            </div>
            <div class="form-group mb-3">
             
                <label for="">Number of Questions</label>
                {{ form_widget(form.nbquestion, {'attr': {'class': 'form-control'}}) }}
                {{form_errors(form.nbquestion)}}
             
            </div>
            <div class="form-group mb-3">
                {{ form_label(form.Chapter, 'Chapter') }}
                {{ form_widget(form.Chapter, {'attr': {'class': 'form-select'}}) }}
            </div>
            <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary ">Save</button>
            {{ form_end(form) }}
            </div>
        </div>
      
    </div>
</div>
{% endblock %}
